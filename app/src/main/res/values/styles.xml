<resources>
    
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#bcaaa4</item>
        <item name="colorPrimaryDark">#4e342e</item>
        <item name="colorAccent">#ec407a</item>
    </style>

    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">#bcaaa4</item>
    </style>

    <style name="text_tour_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_tour_address">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="text_tour_description">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
